---
interface Props {
  title: string;
  description: string;
  icon: any; // Expects a component
}

const { title, description, icon: Icon } = Astro.props;
---

<div class="hobby-card p-6 border border-[var(--color-border)] bg-[var(--color-surface)] hover:border-[var(--color-accent)] transition-colors duration-300">
  <div class="mb-4 text-[var(--color-text-muted)]">
    <Icon class="w-8 h-8" />
  </div>
  <h3 class="text-xl font-bold mb-2 text-[var(--color-text-main)]">{title}</h3>
  <p class="text-[var(--color-text-muted)] text-sm leading-relaxed">{description}</p>
</div>
