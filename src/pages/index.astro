---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
  <div class="flex flex-col items-center justify-center min-h-[50vh] text-center space-y-6">
    <h1 class="text-4xl font-bold tracking-tight sm:text-6xl text-zinc-950">
      Precision Engineering
    </h1>
    <p class="text-lg text-zinc-500 max-w-2xl">
      Mechanical Design • Robotics • manufacturing
    </p>
    <div class="flex gap-4 pt-4">
      <a href="/projects" class="px-6 py-3 text-sm font-medium text-white bg-technical hover:bg-red-600 transition-colors rounded-sm">
        View Projects
      </a>
      <a href="/about" class="px-6 py-3 text-sm font-medium text-zinc-950 bg-zinc-100 hover:bg-zinc-200 transition-colors rounded-sm">
        About Me
      </a>
    </div>
  </div>
</Layout>
