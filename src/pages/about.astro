---
import Layout from '../layouts/Layout.astro';

const skills = [
  {
    category: 'Design',
    items: ['Inventor', 'Fusion 360', 'AutoCAD', 'Blender'],
  },
  {
    category: 'Engineering',
    items: ['FEA / Simulation', 'GD&T', 'DFM / DFA', 'Prototyping'],
  },
  {
    category: 'Fabrication',
    items: ['CNC Machining', '3D Printing', 'Thermoforming', 'Sheet Metal'],
  },
  {
    category: 'Tools',
    items: ['Python', 'MATLAB', 'Antigravity'],
  },
];
---

<Layout title="About" description="About Elias — Mechanical engineer specializing in precision design, robotics, and hands-on fabrication.">
  <section class="py-16 space-y-16">
    <!-- Header -->
    <div class="space-y-3 reveal">
      <p class="font-mono text-sm text-technical tracking-wider uppercase">
        Background
      </p>
      <h1 class="text-4xl sm:text-5xl font-bold tracking-tighter text-zinc-950">
        About Me
      </h1>
    </div>

    <!-- Bio -->
    <div class="flex flex-col md:flex-row gap-10 items-start reveal">
      <div class="shrink-0">
        <img
          src="/images/aboutme.jpg"
          alt="Elias Vanier"
          class="w-48 h-48 md:w-56 md:h-56 object-cover rounded border border-zinc-200 shadow-sm"
          loading="eager"
        />
      </div>
      <div class="space-y-4 text-zinc-600 leading-relaxed">
        <p>
          I'm a mechanical engineering student at RIT (Rochester Institute of Technology) with a passion for building things that work — from
          concept sketches to production-ready parts. My work sits at the intersection of
          design, simulation, and hands-on fabrication.
        </p>
        <p>
          I approach every project with an emphasis on the customer's need, simplicity, and
          manufacturability. Whether it's a robotic mechanism, a structural assembly, or
          a consumer product, I care about the details that make the difference.
        </p>
      </div>
    </div>

    <!-- Skills Grid -->
    <div class="space-y-6 reveal">
      <h2 class="text-2xl font-bold tracking-tight text-zinc-950">Skills</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {skills.map((group) => (
          <div class="border border-zinc-200 rounded p-5 space-y-3 hover:border-zinc-400 transition-colors">
            <h3 class="font-mono text-xs text-technical tracking-wider uppercase">
              {group.category}
            </h3>
            <ul class="space-y-1.5">
              {group.items.map((item) => (
                <li class="text-sm text-zinc-600">{item}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>

    <!-- Resume -->
    <div class="space-y-4 reveal">
      <h2 class="text-2xl font-bold tracking-tight text-zinc-950">Resume</h2>
      <a
        href="/Elias_Vanier_Resume.pdf"
        download
        class="inline-flex items-center gap-2 px-6 py-3 text-sm font-medium text-white bg-zinc-950 hover:bg-technical transition-colors rounded-sm"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>
        Download Resume (PDF)
      </a>
      <!--  <p class="text-xs text-zinc-400">Place your resume at <code class="font-mono bg-zinc-100 px-1 py-0.5 rounded">public/resume.pdf</code></p> -->
    </div>

    <!-- Beyond Engineering section hidden
    <div class="space-y-6 reveal">
      <h2 class="text-2xl font-bold tracking-tight text-zinc-950">Beyond Engineering</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <HobbyCard
          title="Skateboarding"
          description="Pushing limits and finding flow in urban environments. It teaches persistence and creative problem solving."
          icon={Zap}
        />
        <HobbyCard
          title="Snowboarding"
          description="Carving lines and navigating terrain. A pursuit of speed, control, and appreciation for nature."
          icon={Mountain}
        />
        <HobbyCard
          title="Tricking"
          description="A blend of kicks, flips, and twists. It demands body control, explosive power, and artistic expression."
          icon={Activity}
        />
      </div>
    </div>
    -->
  </section>
</Layout>
