---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
  <section class="py-16 space-y-16">
    <!-- Header -->
    <div class="space-y-3">
      <p class="font-mono text-sm text-technical tracking-wider uppercase">
        Get in Touch
      </p>
      <h1 class="text-4xl sm:text-5xl font-bold tracking-tighter text-zinc-950">
        Contact
      </h1>
      <p class="text-zinc-500 max-w-lg">
        Interested in working together or have a question? Reach out directly.
      </p>
    </div>

    <!-- Direct Contact -->
    <div class="space-y-6">
      <a
        href="mailto:hello@example.com"
        class="inline-flex items-center gap-3 text-2xl sm:text-3xl font-bold text-zinc-950 hover:text-technical transition-colors group"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-400 group-hover:text-technical transition-colors"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
        hello@example.com
      </a>
      <p class="text-sm text-zinc-400">
        Replace this with your actual email address in <code class="font-mono bg-zinc-100 px-1 py-0.5 rounded">src/pages/contact.astro</code>.
      </p>
    </div>

    <!-- Contact Form (Netlify-ready, hidden by default) -->
    <div class="space-y-6 border-t border-zinc-200 pt-12">
      <h2 class="text-2xl font-bold tracking-tight text-zinc-950">Or Send a Message</h2>
      <form
        name="contact"
        method="POST"
        data-netlify="true"
        class="max-w-lg space-y-5"
      >
        <input type="hidden" name="form-name" value="contact" />

        <div class="space-y-1.5">
          <label for="name" class="block text-sm font-medium text-zinc-700">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-2.5 border border-zinc-300 rounded-sm text-sm text-zinc-950 bg-white focus:outline-none focus:ring-2 focus:ring-technical/30 focus:border-technical transition-colors"
            placeholder="Your name"
          />
        </div>

        <div class="space-y-1.5">
          <label for="email" class="block text-sm font-medium text-zinc-700">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-2.5 border border-zinc-300 rounded-sm text-sm text-zinc-950 bg-white focus:outline-none focus:ring-2 focus:ring-technical/30 focus:border-technical transition-colors"
            placeholder="you@example.com"
          />
        </div>

        <div class="space-y-1.5">
          <label for="message" class="block text-sm font-medium text-zinc-700">Message</label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full px-4 py-2.5 border border-zinc-300 rounded-sm text-sm text-zinc-950 bg-white focus:outline-none focus:ring-2 focus:ring-technical/30 focus:border-technical transition-colors resize-y"
            placeholder="Tell me about your project..."
          ></textarea>
        </div>

        <button
          type="submit"
          class="px-6 py-3 text-sm font-medium text-white bg-zinc-950 hover:bg-technical transition-colors rounded-sm"
        >
          Send Message
        </button>
      </form>
    </div>
  </section>
</Layout>
